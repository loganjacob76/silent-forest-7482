<h1><%= @chef.name %></h1>

<div id='dishes'>
  <h2>Dishes: </h2>
  <ul>
    <% @chef.dishes.each do |dish| %>
      <li><%= dish.name %> - <%= dish.description %></li>
    <% end %>
  </ul>
</div>

<div id='ingredients'>
  <h2>Ingredients:</h2>
  <ul>
    <% @ingredients.ingredients_by_chef(@chef).each do |ingredient| %>
      <li><%= ingredient.name %> - <%= ingredient.calories %> calories</li>
    <% end %>
  </ul>
</div>